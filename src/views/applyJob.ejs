<form action="/apply" method="post" enctype="multipart/form-data"  class="w-50 d-flex flex-column m-auto my-4 bg-light p-4 rounded border border-dark">
    <h1 class="text-center">Application:</h1>
    
    <input type="number" name="id" hidden value="<%=job.id%>">

    <div class="input-group mb-3">
        <span class="input-group-text" id="inputGroup-sizing-default">Name</span>
        <input type="text" name="name" class="form-control" aria-label="Sizing example input"
            aria-describedby="inputGroup-sizing-default" required>
    </div>

    <div class="input-group mb-3">
        <span class="input-group-text" id="inputGroup-sizing-default">Email</span>
        <input type="email" name="email" class="form-control" aria-label="Sizing example input"
            aria-describedby="inputGroup-sizing-default" required>
    </div>

    <div class="input-group mb-3">
        <span class="input-group-text" id="inputGroup-sizing-default">Contact No:</span>
        <input type="tel" name="contact" placeholder="+91 _ _ _ _  _ _  _ _ _ _" class="form-control" aria-label="Sizing example input"
            aria-describedby="inputGroup-sizing-default" required>
    </div>

    <div class="input-group mb-3">
        <label class="input-group-text" for="inputGroupFile01">Resume</label>
        <input type="file" name="resume" accept=".doc, .docx, .pdf, images/*" class="form-control" id="inputGroupFile01" required>
    </div>

    <button type="submit" class="btn btn-success w-25 m-auto">Apply</button>
</form>