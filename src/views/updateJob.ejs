<form action="/update" method="post" class="w-50 d-flex flex-column m-auto my-4 bg-light p-4 rounded border border-dark">

    <%if(errors){%>
        <div class="alert alert-danger" role="alert">
            <ol class="error-list">
                <li>
                    <%= errors%>
                </li>
            </ol>
        </div>
        <%}%>

    <h1 class="text-center text-dark">Update Job</h1>

    <input type="number" name="id" value="<%= job.id%>" hidden>
    <input type="text" name="updated" value="yes" hidden>

    <select class="form-select category mb-3" name="category" aria-label="Default select example">
        <option selected>Select Job category</option>
        <option value="Tech">Tech</option>
        <option value="Non Tech">Non Tech</option>
    </select>

    <select class="form-select designation mb-3" name="designation" aria-label="Default select example">
        <option selected>Select Job Designation</option>
        <option value="Front-end Developer">Front-end Developer</option>
        <option value="Back-end Developer">Back-end Developer</option>
        <option value="Full stack Developer">Full stack Developer</option>
        <option value="Java Developer">Java Developer</option>
        <option value="MERN Developer">MERN Developer</option>
        <option value="DevOps">Devops</option>
        <option value="HR">HR</option>
        <option value="SDE">SDE</option>
    </select>



    <div class="mb-3">
        <label for="companyName" class="form-label">Company</label>
        <input type="text" class="form-control" id="companyName" name="companyName" placeholder="Company Name" value="<%= job.companyName%>"
            required>
    </div>

    <div class="row g-3 mb-3">
        <div class="col input-group mb-3">
            <span class="input-group-text">Location</span>
            <input type="text" class="form-control" id="location" name="location" value="<%= job.location%>" required>
        </div>

        <div class="col input-group mb-3">
            <span class="input-group-text">Salary</span>
            <input type="text" class="form-control" name="salary" aria-label="Enter Salary" value="<%= job.salary%>" required>
        </div>
    </div>

    <div class="row g-3 mb-3">
        <div class="col form-group">

            <div class="input-group mb-4">
                <span class="input-group-text" id="inputGroup-sizing-default">Apply By:</span>
                <input type="date" class="form-control" name="deadline" value="<%= job.deadline%>" required>
            </div>

            <div class="input-group mb-3">
                <span class="input-group-text">Positions</span>
                <input type="number" class="form-control" name="openings" value="<%= job.openings%>" required>
            </div>

        </div>


        <div class="col">
            <!-- <span class="input-group-text">Select Skills Required</span> -->

            <div class="dropdown">
                <button class="btn btn-light dropdown-toggle w-100 border" type="button"
                    data-bs-toggle="dropdown" aria-expanded="false">
                    Select Skills Required
                </button>
                <ul class="dropdown-menu p-0 w-100">
                    <li>
                        <select class="col form-select mb-3" name="skills" id="skills" multiple
                            aria-label="Select Skills Required" required>
                            <option value="NodeJS">NodeJS</option>
                            <option value="React">React</option>
                            <option value="MongoDB">MongoDB</option>
                            <option value="SQL">SQL</option>
                            <option value="JAVA">JAVA</option>
                            <option value="Spring Boot">Spring Boot</option>
                            <option value="C++">C++</option>
                            <option value="Express">Express</option>
                            <option value="Angular">Angular</option>
                        </select>
                    </li>
                </ul>
            </div>
        </div>
    </div>

    <button type="submit" class="btn btn-primary w-50 m-auto">Update</button>

</form>